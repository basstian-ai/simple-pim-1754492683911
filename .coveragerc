[run]
branch = True
omit =
    */tests/*
    */test_*.py
    */test_*.pyc
    */__init__.py
    venv/*
    .venv/*
    env/*
    build/*
    dist/*
    .next/*
    node_modules/*
    coverage/*
    .git/*
    .vercel/*
    *.egg-info/*
    */migrations/*
    */__pycache__/*

[report]
# Common lines to ignore in coverage reports
exclude_lines =
    pragma: no cover
    if __name__ == '__main__'
    if TYPE_CHECKING
    @abstractmethod
    raise NotImplementedError

show_missing = True
skip_covered = False
fail_under = 0

[html]
directory = coverage_html_report
